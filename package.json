{
  "name": "team-sorter",
  "version": "0.1.0+1",
  "description": "A project for randomly and evenly picking teams",
  "main": "dist/library.js",
  "files": [
    "dist/*"
  ],
  "types": "dist/library.d.ts",
  "repository": "ernestoittig/teams",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start": "node dist/server.js",
    "web:build": "rollup -c",
    "web:dev": "env NODE_ENV=development rollup -wc",
    "web:start": "http-server",
    "test": "mocha -r ts-node/register test/*",
    "lint": "eslint src/* test/*; exit 0",
    "doc": "typedoc"
  },
  "author": "Ernesto Ittig <e.ittig@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.6",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "mocha": "^6.2.2",
    "rollup": "^1.27.8",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-node": "^8.5.4",
    "typedoc": "^0.16.9",
    "typedoc-plugin-markdown": "^2.2.16",
    "typescript": "^3.7.3"
  }
